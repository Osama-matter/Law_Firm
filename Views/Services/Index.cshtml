@using Law_Firm.Models.ClsDatabase
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model IEnumerable<ServiceModel>
@{
    ViewData["Title"] = localizer["OurServices"];
}

<section class="py-5">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold mb-2">@localizer["OurServices"]</h2>
            <p class="text-muted">@localizer["ServicesTagline"]</p>
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var service in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 service-card d-flex flex-column">
                            <div class="card-body text-center p-4">
                                @{
                                    var iconPath = service.IconImage ?? service.IMagURL; // Fixed: removed duplicate ?? service.IconImage
                                }
                                @if (!string.IsNullOrWhiteSpace(iconPath))
                                {
                                    <div class="mb-3">
                                        <img src="@iconPath" alt="@service.Title icon" class="img-fluid" style="max-height:64px; object-fit:contain;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="display-5 mb-3 text-warning"><i class="fas fa-briefcase"></i></div>
                                }
                                <h5 class="card-title text-dark">@service.Title</h5>
                                <p class="card-text text-muted">@service.SubDescription</p>
                                <a href="@Url.Action("Details", "Services", new { id = service.Id })" class="text-decoration-none fw-semibold">@localizer["LearnMore"]</a>
                            </div>
                            <div class="card-footer bg-white border-0 pt-0 pb-3 px-4 mt-auto">
                                <div class="d-flex gap-2 justify-content-center">
                                    <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", "Services", new { id = service.Id })">@localizer["Edit"]</a>
                                    <form asp-action="Delete" asp-controller="Services" method="post" onsubmit="return confirm('@localizer["DeleteConfirm"]');" style="display: inline;">
                                        <input type="hidden" name="id" value="@service.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">@localizer["Delete"]</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-muted">@localizer["NoServicesFound"]</p>
            </div>
        }
    </div>
</section>

@section Styles {
    <style>
        .service-card {
            transition: transform .25s ease, box-shadow .25s ease;
        }

            .service-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 .5rem 1.25rem rgba(0,0,0,.12);
            }
    </style>
}