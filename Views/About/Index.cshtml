@{ var isRtl = System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft; }
<!DOCTYPE html>
<html lang="en" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - Star Lee Law Firm</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .service_banner {
            padding: 30px 20px;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 30px;
            background: #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

            .service_banner::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 4px;
            }

        /* Underline accents aligned to site navy palette */
        .green-after::after,
        .pink-after::after,
        .purple-after::after {
            background: linear-gradient(45deg, #1e3a8a, #1e40af);
        }

        .service_banner img {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
            object-fit: contain;
        }

        .service_banner h2 {
            color: #333;
            font-size: 1.5rem;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .service_banner p {
            color: #666;
            line-height: 1.6;
        }

        .bg_Consultation {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
            color: #fff;
        }

        .c_brown {
            color: #8b4513;
        }

        .c_f {
            color: #f8f9fa;
        }

        .pt-70 {
            padding-top: 70px;
        }

        .py-70 {
            padding: 70px 0;
        }

        .mt-50 {
            margin-top: 50px;
        }

        .py-40 {
            padding: 40px 0;
        }

        .col-4pad {
            padding: 15px;
        }

        .bg_tree {
            background: linear-gradient(45deg, #1e3a8a, #1e40af);
            color: #fff;
            padding: 12px 30px;
            border-radius: 25px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .bg_tree:hover {
                background: linear-gradient(45deg, #2a4fb3, #2b57c7);
                color: #fff;
                transform: translateY(-2px);
            }

        .bg_gradient_team {
            background: linear-gradient(135deg, #111827 0%, #1f2937 100%);
            color: #e5e7eb;
        }

        .Lawyers_one, .Lawyers_to, .Lawyers_tree {
            height: 200px;
            background-size: cover;
            background-position: center;
            position: relative;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .Lawyers_one {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300"><rect fill="%23667eea" width="400" height="300"/><text x="50%" y="50%" fill="white" font-size="20" text-anchor="middle" dy="0.3em">Free Consultation</text></svg>');
        }

        .Lawyers_to {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300"><rect fill="%23764ba2" width="400" height="300"/><text x="50%" y="50%" fill="white" font-size="20" text-anchor="middle" dy="0.3em">Legal Information</text></svg>');
        }

        .Lawyers_tree {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300"><rect fill="%2328a745" width="400" height="300"/><text x="50%" y="50%" fill="white" font-size="20" text-anchor="middle" dy="0.3em">Proven Results</text></svg>');
        }

        .ovrllay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0,0,0,0.4);
            transition: all 0.3s ease;
        }

            .ovrllay:hover {
                background: rgba(0,0,0,0.6);
            }

        .inner_text h1 a {
            color: white;
            text-decoration: none;
            font-size: 1.8rem;
            font-weight: 600;
            text-align: center;
        }

        .border_img {
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            max-width: 100%;
            height: auto;
        }

        .about-bottom-s {
            line-height: 1.8;
            font-size: 1.1rem;
        }

        .p0 {
            padding: 0;
        }

        /* Fix: responsive styles */


        /* Basic RTL tweaks */
        [dir="rtl"] .text-end { text-align: left !important; }
        [dir="rtl"] .text-start { text-align: right !important; }
</style>
</head>
